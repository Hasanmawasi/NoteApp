<div class="container-fluid container-fluid-custom pb-5 mb-5">
    <div class="row mb-4">

        <div class="col">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="/dashbord">Dashbord</a></li>
                    <li class="breadcrumb-item" active> Add Note Title</li>
                </ol>
            </nav>
            <div class="col d-flex justify-content-between align-item-center">
                <h1 class="h3">Add Note</h1>
                
            </div>
        </div>
    </div>

    <form action="/dashbord/add" method="post" class="position-relative">
        <div class="form-group mb-4 position-absolute" style="left: 1px; right: 1px; top: 1px;">
            <input type="text" name="title" id="title"class="form-control fw-bold border-0 fs-4"  placeholder="Title" required>
        </div>
        <div class="form-group mb-4">
          <textarea placeholder="Enter your Note here..." name="body" id="body" class="form-control pt-5 fs-4" rows="8" required></textarea>
      </div>

        <div class="form-group" >
            <button type="submit" class="btn btn-primary btn-lg" >+ Add Note</button>
        </div>

    </form>



</div>  



   